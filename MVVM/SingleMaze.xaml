<Window x:Class="MVVM.SingleMaze"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"

        xmlns:Controls="clr-namespace:MVVM"

        
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="SingleMaze" Height="300" Width="300">
    <Viewbox>
        <Grid>
       
        <Button Content="Restart game" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="32,10,0,0"/>
        <Button Content="Solve maze" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="136,10,0,0"/>
        <Button Content="Main menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="248,10,0,0"/>

        
        <Controls:MazeBoard x:Name="mazey"  HorizontalAlignment="Center" VerticalAlignment="Bottom" MString="{Binding MazeString,Mode=TwoWay}" />

    </Grid>
    </Viewbox>
</Window>
